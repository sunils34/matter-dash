<footer>
  <style>
    .alert {
      background-color: white;
      border-radius: 0.6rem;
      border: 1px solid rgba(10, 10, 10, 0.25);
      border-left-width: 0.3125rem;
      color: #0a0a0a;
      display: none;
      margin: 15px auto;
      padding: 1.3rem;
      position: fixed;
      width: 80%;
      z-index: 100;
      transform: translate(-50%, 0);
      left: 50%;
    }

    .alert.error {
      border-left-color: #cc4b37;
      background-color: #f7e4e1;
      color: #0a0a0a;
    }
  </style>
  <script>
    var error = "<%= messages.error %>";
    var info = "<%= messages.info %>";
    if(error) $('#alert').addClass('error').html(error).fadeIn(1000);
    else if(info) $('#alert').addClass('info').html(info).fadeIn();
    $('#alert').delay(5000).fadeOut('slow');
  </script>
</footer>
